<h1>Quickest Route</h1>

<%= form_for @changeset, Routes.search_path(@conn, :run), fn f ->  %>
  <section class="row">
    <article class="column">
      <h3>Starting From...</h3>
      <div>
        <%= text_input f, :from %>
        <div>
        <label>Departure time</label>
        <%= datetime_local_input f, :departure_time %>
        <p>Leave blank for "now"</p>
        <!-- consider a checkbox which if checked will remove the input field altogether -->
        </div>
      </div>
    </article>

    <article class="column">
      <h3>To...</h3>
      <div>
        <%= array_input f, :to %>
        <%= array_add_button f, :to %>
      </div>
    </article>
    <article class="column">
      <!-- TODO does VScode have anything for completing html tags??? -->
      <h3>And Finally To...</h3>
      <div>
        <%= text_input f, :finally %>
        <p>Leave blank if not needed</p>
      </div>
    </article>
  </section>

  <%= submit "Run Search" %>
<% end%>
